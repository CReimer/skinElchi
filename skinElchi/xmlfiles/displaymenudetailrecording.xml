<menudetailedrecording x="0" y="0" width="100%" height="100%" fadetime="0">
    <detailheader>
      <area x="1%" y="6%" width="99%" height="16%" layer="2">
        <drawtext name="date" x="0" y="0" fontsize="25%" font="{vdrOsd}" color="{clrMenuEventTime}" text="{date} {time}"/>
        <drawrectangle x="0" y="{posy(date)} + {height(date)}" width="{width(vps)}" height="25%" color="{clrMenuEventVpsBg}" />
        <drawtext name="title" x="0" y="{posy(date)} + {height(date)}*2" fontsize="25%" font="{vdrOsd}" color="{clrMenuEventTitle}" text="{name}"/>
        <drawtext x="0" y="{posy(title)} + {height(title)}" fontsize="25%" font="{vdrSml}" color="{clrMenuEventShortText}" text="{shorttext}"/>
      </area>
    </detailheader>

    <tab name="Tab1" x="1%" y="23%" width="99%" height="71%" layer="2" scrollheight="{areaheight}/4">
       <drawtextbox x="0" y="0" width="96%" font="{vdrSml}" fontsize="{areaheight}*0.0563" color="{clrMenuEventDescription}" text="{description}&#10;&#10;{tr(length)}: {recordinglength}&#10;{tr(size)}: {recordingsize}&#10;Format: {recordingformat}, Bitrate: ~ {recordingbitrate} (Audio + Video)" />
    </tab>
</menudetailedrecording>
