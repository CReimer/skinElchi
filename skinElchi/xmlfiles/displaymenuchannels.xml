<menuchannels x="0" y="0" width="100%" height="100%" fadetime="0">
    <menuitems x="1%" y="6%" orientation="vertical" width="98%" height="88%" align="center" numlistelements="25">

        <listelement>
            <!-- Background -->
            <area x="0" y="0" width="100%" height="100%" layer="2">
                <fill condition="{current}" color="{clrMenuItemCurrentBg}" />
                <drawellipse x="0" y="0" width="{areaheight}*0.5" height="{areaheight}*0.5" color="{clrTransparent}" quadrant="-2"/>
                <drawellipse x="{areawidth} - {areaheight}*0.5" y="0" width="{areaheight}*0.5" height="{areaheight}*0.5" color="{clrTransparent}" quadrant="-1"/>
                <drawellipse x="0" y="{areaheight} - {areaheight}*0.5" width="{areaheight}*0.5" height="{areaheight}*0.5" color="{clrTransparent}" quadrant="-3"/>
                <drawellipse x="{areawidth} - {areaheight}*0.5" y="{areaheight} - {areaheight}*0.5" width="{areaheight}*0.5" height="{areaheight}*0.5" color="{clrTransparent}" quadrant="-4"/>
            </area>
            <area condition="not{current}++not{separator}" x="0" width="100%" layer="3">
                <drawtext name="spacer1" x="{areaheight}*0.5" valign="center" font="{vdrOsd}" fontsize="100%" color="{clrTransparent}" text="0" />
                <drawtext name="spacer2" x="{areaheight}*0.5" valign="center" font="{vdrOsd}" fontsize="100%" color="{clrTransparent}" text="00" />
                <drawtext condition="lt({number},10)++isset({number})" x="{posx(spacer1)}+{width(spacer1)}" valign="center" font="{vdrOsd}" fontsize="100%" color="{clrMenuItemSelectable}" text="{number}  {name}" />
                <drawtext condition="gt({number},9)++isset({number})" x="{posx(spacer1)}" valign="center" font="{vdrOsd}" fontsize="100%" color="{clrMenuItemSelectable}" text="{number}  {name}" />
                <drawtext x="{posx(spacer2)}+{width(spacer2)}" valign="center" font="{vdrOsd}" fontsize="100%" color="{clrMenuItemSelectable}" text="  {name}" />
            </area>
            <area condition="{current}" x="0" width="100%" layer="3">
                <drawtext name="spacer1" x="{areaheight}*0.5" valign="center" font="{vdrOsd}" fontsize="100%" color="{clrTransparent}" text="0" />
                <drawtext name="spacer2" x="{areaheight}*0.5" valign="center" font="{vdrOsd}" fontsize="100%" color="{clrTransparent}" text="00" />
                <drawtext condition="lt({number},10)++isset({number})" x="{posx(spacer1)}+{width(spacer1)}" valign="center" font="{vdrOsd}" fontsize="100%" color="{clrMenuItemCurrentFg}" text="{number}  {name}" />
                <drawtext condition="gt({number},9)++isset({number})" x="{posx(spacer1)}" valign="center" font="{vdrOsd}" fontsize="100%" color="{clrMenuItemCurrentFg}" text="{number}  {name}" />
                <drawtext x="{posx(spacer2)}+{width(spacer2)}" valign="center" font="{vdrOsd}" fontsize="100%" color="{clrMenuItemCurrentFg}" text="  {name}" />
            </area>
            <area condition="{separator}" x="0" width="100%" layer="3">
                <drawtext name="spacer1" x="{areaheight}*0.5" valign="center" font="{vdrOsd}" fontsize="100%" color="{clrTransparent}" text="0" />
                <drawtext name="spacer2" x="{areaheight}*0.5" valign="center" font="{vdrOsd}" fontsize="100%" color="{clrTransparent}" text="00" />
                <drawtext condition="lt({number},10)++isset({number})" x="{posx(spacer1)}+{width(spacer1)}" valign="center" font="{vdrOsd}" fontsize="100%" color="{clrMenuItemNonSelectable}" text="{number}  {name}" />
                <drawtext condition="gt({number},9)++isset({number})" x="{posx(spacer1)}" valign="center" font="{vdrOsd}" fontsize="100%" color="{clrMenuItemNonSelectable}" text="{number}  {name}" />
                <drawtext x="{posx(spacer2)}+{width(spacer2)}" valign="center" font="{vdrOsd}" fontsize="100%" color="{clrMenuItemNonSelectable}" text="  {name}" />
            </area>
        </listelement>

        <currentelement delay="500" fadetime="0">
        </currentelement>

    </menuitems>
    <scrollbar>
        <area condition="lt({height},1000)" x="99%" y="4%" width="1%" height="92%" layer="2">
            <fill color="{clrMenuScrollbarTotal}" />
            <drawrectangle x="0" y="{areaheight} * {offset} / 1000" width="{areawidth}" height="{areaheight} * {height} / 1000 - 8" color="{clrMenuScrollbarShown}" />
        </area>
    </scrollbar>
</menuchannels>