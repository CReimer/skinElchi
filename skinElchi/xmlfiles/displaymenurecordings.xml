<menurecordings x="0" y="0" width="100%" height="100%" fadetime="0">
    <menuitems x="1%" y="6%" orientation="vertical" width="98%" height="88%" align="center" numlistelements="25">
        <listelement>
            <area x="0" y="0" width="100%" height="100%" layer="2">
                <fill condition="{current}" color="{clrMenuItemCurrentBg}" />
                <drawellipse x="0" y="0" width="{areaheight}*0.5" height="{areaheight}*0.5" color="{clrTransparent}" quadrant="-2"/>
                <drawellipse x="{areawidth} - {areaheight}*0.5" y="0" width="{areaheight}*0.5" height="{areaheight}*0.5" color="{clrTransparent}" quadrant="-1"/>
                <drawellipse x="0" y="{areaheight} - {areaheight}*0.5" width="{areaheight}*0.5" height="{areaheight}*0.5" color="{clrTransparent}" quadrant="-3"/>
                <drawellipse x="{areawidth} - {areaheight}*0.5" y="{areaheight} - {areaheight}*0.5" width="{areaheight}*0.5" height="{areaheight}*0.5" color="{clrTransparent}" quadrant="-4"/>
            </area>

            <area condition="{separator}" x="0" width="100%" layer="3">
                <drawtext condition="lt({month},10)" x="{areaheight}*0.5" valign="center" font="{vdrOsd}" fontsize="100%" color="{clrMenuItemNonSelectable}" text="{daynumeric}.0{month}.{year}" />
                <drawtext condition="gt({month},9)" x="{areaheight}*0.5" valign="center" font="{vdrOsd}" fontsize="100%" color="{clrMenuItemNonSelectable}" text="{daynumeric}.{month}.{year}" />
                <drawtext x="11%" valign="center" font="{vdrOsd}" fontsize="100%" color="{clrMenuItemNonSelectable}" text="{time}" />
                <drawtext x="18%" valign="center" font="{vdrOsd}" fontsize="100%" color="{clrMenuItemNonSelectable}" text="{durationhours}:{durationminutes}" />
                <drawtext condition="not{cutted}" x="25%" valign="center" font="{vdrOsd}" fontsize="100%" color="{clrMenuItemNonSelectable}" text="{name}" />
                <drawtext condition="{cutted}" x="25%" valign="center" font="{vdrOsd}" fontsize="100%" color="{clrMenuItemNonSelectable}" text="%{name}" />
            </area>

            <area condition="not{current}++not{folder}" x="0" width="100%" layer="3">
                <drawtext condition="lt({month},10)" x="{areaheight}*0.5" valign="center" font="{vdrOsd}" fontsize="100%" color="{clrMenuItemSelectable}" text="{daynumeric}.0{month}.{year}" />
                <drawtext condition="gt({month},9)" x="{areaheight}*0.5" valign="center" font="{vdrOsd}" fontsize="100%" color="{clrMenuItemSelectable}" text="{daynumeric}.{month}.{year}" />
                <drawtext x="11%" valign="center" font="{vdrOsd}" fontsize="100%" color="{clrMenuItemSelectable}" text="{time}" />
                <drawtext x="18%" valign="center" font="{vdrOsd}" fontsize="100%" color="{clrMenuItemSelectable}" text="{durationhours}:{durationminutes}" />
                <drawtext condition="not{cutted}" x="25%" valign="center" font="{vdrOsd}" fontsize="100%" color="{clrMenuItemSelectable}" text="{name}" />
                <drawtext condition="{cutted}" x="25%" valign="center" font="{vdrOsd}" fontsize="100%" color="{clrMenuItemSelectable}" text="%{name}" />
            </area>

            <area condition="{current}++not{folder}" x="0" width="100%" layer="3">
                <drawtext condition="lt({month},10)" x="{areaheight}*0.5" valign="center" font="{vdrOsd}" fontsize="100%" color="{clrMenuItemCurrentFg}" text="{daynumeric}.0{month}.{year}" />
                <drawtext condition="gt({month},9)" x="{areaheight}*0.5" valign="center" font="{vdrOsd}" fontsize="100%" color="{clrMenuItemCurrentFg}" text="{daynumeric}.{month}.{year}" />
                <drawtext x="11%" valign="center" font="{vdrOsd}" fontsize="100%" color="{clrMenuItemCurrentFg}" text="{time}" />
                <drawtext x="18%" valign="center" font="{vdrOsd}" fontsize="100%" color="{clrMenuItemCurrentFg}" text="{durationhours}:{durationminutes}" />
                <drawtext condition="not{cutted}" x="25%" valign="center" font="{vdrOsd}" fontsize="100%" color="{clrMenuItemCurrentFg}" text="{name}" />
                <drawtext condition="{cutted}" x="25%" valign="center" font="{vdrOsd}" fontsize="100%" color="{clrMenuItemCurrentFg}" text="%{name}" />
            </area>

            <area condition="not{current}++{folder}" x="0" width="100%" layer="3">
                <drawtext x="{areaheight}*0.5" valign="center" font="{vdrOsd}" fontsize="100%" color="{clrMenuItemSelectable}" text="{numrecordingsfolder}" />
                <drawtext x="18%" valign="center" font="{vdrOsd}" fontsize="100%" color="{clrMenuItemSelectable}" text="{newrecordingsfolder}" />
                <drawtext x="25%" valign="center" font="{vdrOsd}" fontsize="100%" color="{clrMenuItemSelectable}" text="{name}" />
            </area>

            <area condition="{current}++{folder}" x="0" width="100%" layer="3">
                <drawtext x="{areaheight}*0.5" valign="center" font="{vdrOsd}" fontsize="100%" color="{clrMenuItemCurrentFg}" text="{numrecordingsfolder}" />
                <drawtext x="18%" valign="center" font="{vdrOsd}" fontsize="100%" color="{clrMenuItemCurrentFg}" text="{newrecordingsfolder}" />
                <drawtext x="25%" valign="center" font="{vdrOsd}" fontsize="100%" color="{clrMenuItemCurrentFg}" text="{name}" />
            </area>
        </listelement>
    </menuitems>

    <scrollbar>
        <area condition="lt({height},1000)" x="99%" y="4%" width="1%" height="92%" layer="2">
            <fill color="{clrMenuScrollbarTotal}" />
            <drawrectangle x="0" y="{areaheight} * {offset} / 1000" width="{areawidth}" height="{areaheight} * {height} / 1000 - 8" color="{clrMenuScrollbarShown}" />
        </area>
    </scrollbar>
</menurecordings>
